<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.murali.hariprahlad.freefood.RegisterActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view2">

        <android.support.v7.widget.Toolbar
            android:id="@+id/registertoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view2"
        android:layout_marginTop="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Full Name"
            android:background="@drawable/edittextborder"
            android:padding="8dp"
            android:layout_marginTop="10dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/reg_name"
            android:layout_below="@+id/view2"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Enter Email"
            android:background="@drawable/edittextborder"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:id="@+id/reg_email"
            android:layout_below="@+id/reg_name"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:hint="Enter Mobile Number"
            android:background="@drawable/edittextborder"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:id="@+id/reg_mobile"
            android:layout_below="@+id/reg_email"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:hint="Enter Password"
            android:background="@drawable/edittextborder"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:id="@+id/reg_password"
            android:layout_below="@+id/reg_mobile"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:hint="Enter Address"
            android:background="@drawable/edittextborder"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:id="@+id/reg_address"
            android:layout_below="@+id/reg_password"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberSigned"
            android:ems="10"
            android:hint="Enter PinCode"
            android:background="@drawable/edittextborder"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:id="@+id/reg_pincode"
            android:layout_below="@+id/reg_address"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reg_city"
            android:hint="Enter City"
            android:background="@drawable/edittextborder"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/reg_pincode"
            android:layout_centerHorizontal="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reg_area"
            android:hint="Enter Area"
            android:background="@drawable/edittextborder"
            android:padding="8dp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/reg_city"
            android:layout_centerHorizontal="true" />
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SignUp"
            android:layout_marginTop="10dp"
            android:background="@color/colorcode"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:id="@+id/reg_signUp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Already Have Account SignIn Now"
            android:textColor="@color/colorAccent"
            android:id="@+id/textView"
            android:layout_marginTop="30dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SignIn"
            android:onClick="SignIn"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:padding="10dp"
            android:id="@+id/register_signin"
            android:background="@drawable/textview"
            android:layout_alignTop="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    </ScrollView>


</RelativeLayout>
